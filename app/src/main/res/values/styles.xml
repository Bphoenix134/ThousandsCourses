<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.Text" parent="">
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.App.Label" parent="TextAppearance.App.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Hint" parent="TextAppearance.App.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Widget.App.EditText" parent="">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/dark</item>
        <item name="android:layout_height">80dp</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextInactive</item>
    </style>

    <style name="BottomNavigationTextActive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>